<form method="post" action="/admin/events/update">
    <input type="text" name="name" value="<%=@event.name%>" placeholder="name"/>
    <input type="date" id="start" name="start" value="<%=@event.start%>">
    <input type="hidden" name="id" value="<%=@event.id%>"/>
    <input type="submit">
</form>
<script>
    $("#start").datetimepicker();
</script>
