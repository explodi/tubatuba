<style>
    #banner {
        position:fixed;
        top:0;
        left:0;
        right:0;
        bottom:0;
    }
</style>
<% if @event %>
<%=render @event, :address=>true, :line_up=>true, :title=>true, :date=>true %>
   
<% else %>
<div id="banner">
   <%=raw Text2svg('tubatuba', font: "#{Rails.root.join('public')}/arialnarrow.ttf", text_align: :left, bold: true)%>
</div>
<% end %>
