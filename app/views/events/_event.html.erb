<style>
   body {
      overflow:hidden;
           <% if width && height %>
      width:<%=width%>px;
      height:<%=height%>px;
      
      <% end %>
   }
   #banner {
      margin: 0 auto;
      background:url(/image/<%=@event.background_url%>) no-repeat center center fixed; 
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      position:fixed;
      top:0;
      left:0;
      <% if width && height %>
      width:<%=width%>px;
      height:<%=height%>px;
      
      <% else %>
      right:0;
      bottom:0;
      <% end %>
      overflow:hidden;
   }
   #event-name-line-up {

   }
   #event-name {
      width:100%;
            padding:2%;

      max-width:1024px;
   }
    #banner-acts {
      width:40%;
            padding:2%;

    }
    #address {
      width:60%;
            max-width:700px;


    }
    #date {
       width:80%;
            max-width:700px;

    }
    #date-address {
      position:absolute;
      margin: 0 auto;
      left:0;
      right:0;
      bottom:0;
      padding:2%;
    }
</style>
<div id="banner">
<div id="event-name-line-up">
<% if title %>
<div id="event-name">
<%=raw Text2svg(@event.name, font: "#{Rails.root.join('public')}/arialnarrow.ttf", text_align: :left, bold: true,char_size:"0,0,2000,3000")%>
</div>
<% end %>
<% if line_up %>

<div id="banner-acts">
<% @event.acts.each do |act| %>
   <%=raw Text2svg(act.name, font: "#{Rails.root.join('public')}/arialnarrow.ttf", text_align: :left, bold: true)%>
<% end %>

</div>
</div>
<% end %>
<div id="date-address">

<% if date %>
   <% if @event.start %>
   <div id="date">
      <%=raw Text2svg(I18n.l(@event.start.in_time_zone("America/Santiago"), format: :short).upcase, font: "#{Rails.root.join('public')}/arialnarrow.ttf", text_align: :left, bold: true)%>
   </div>
   <% end %>
<% end %>
<% if address %>
<div id="address">
   <%=raw Text2svg("GRAL FLORES 229, PROVIDENCIA", font: "#{Rails.root.join('public')}/arialnarrow.ttf", text_align: :left, bold: true)%>
</div>
<% end %>
</div>
</div>
